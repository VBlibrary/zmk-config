#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;

        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)                 RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)                 RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)                 RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
                                    RC(3,0) RC(3,2)                 RC(3,7) RC(3,9)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "row2col";
        row-gpios
            = <&pro_micro 4 GPIO_ACTIVE_HIGH>
            , <&pro_micro 5 GPIO_ACTIVE_HIGH>
            , <&pro_micro 20 GPIO_ACTIVE_HIGH>
            , <&pro_micro 18 GPIO_ACTIVE_HIGH>
            ;

    };

    trackpad0: trackpad {
        compatible = "manufacturer,trackpad";
        label = "Trackpad0";
        status = "okay";

        /* Specify the I2C bus and address for the trackpad */
        i2c-bus = <&i2c0>;  // Replace with the correct I2C bus
        i2c-address = <0x12>;  // Replace with the correct I2C address
        gpio-sda = <&nice_nano_v2 2 GPIO_ACTIVE_HIGH>; // GPIO pin for SDA for Trackpad0
        gpio-scl = <&nice_nano_v2 3 GPIO_ACTIVE_HIGH>; // GPIO pin for SCL for Trackpad0
    };

    trackpad1: trackpad {
        compatible = "manufacturer,trackpad";
        label = "Trackpad1";
        status = "okay";

        /* Specify the I2C bus and address for the trackpad */
        i2c-bus = <&i2c1>;  // Replace with the correct I2C bus
        i2c-address = <0x13>;  // Replace with the correct I2C address
        gpio-sda = <&nice_nano_v2 2 GPIO_ACTIVE_HIGH>; // GPIO pin for SDA for Trackpad1
        gpio-scl = <&nice_nano_v2 3 GPIO_ACTIVE_HIGH>; // GPIO pin for SCL for Trackpad1
    };
};
